# Database
DATABASE_URL="postgresql://username:password@localhost:5432/WattVrij?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Cloudflare R2 Storage
CLOUDFLARE_R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
CLOUDFLARE_R2_ACCESS_KEY_ID="your-r2-access-key-id"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
CLOUDFLARE_R2_BUCKET_NAME="WattVrij-files"
CLOUDFLARE_R2_PUBLIC_URL="https://your-custom-domain.com"

# RVO (Netherlands Enterprise Agency) API
RVO_API_KEY="your-rvo-api-key"
RVO_API_URL="https://api.rvo.nl/v1"

# EP Online API for Energy Labels
EP_ONLINE_API_KEY="your-ep-online-api-key"
EP_ONLINE_API_URL="https://api.ep-online.nl/v1"

# CBS (Statistics Netherlands) API
CBS_API_KEY="your-cbs-api-key"
CBS_API_URL="https://opendata.cbs.nl/ODataApi/odata"

# Payment Processing
STRIPE_SECRET_KEY="your-stripe-secret-key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Email Service
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@WattVrij.nl"

# Redis Cache (for API rate limiting)
REDIS_HOST="redis://default:password@host:port/0"
REDIS_PORT="6379"
REDIS_PASSWORD="your-redis-password"

# Security
JWT_SECRET="your-jwt-secret"
JWT_REFRESH_SECRET="your-jwt-refresh-secret"

# Monitoring
SENTRY_DSN="your-sentry-dsn"

# App Configuration
NEXT_PUBLIC_APP_URL="https://WattVrij.nl"
NODE_ENV="production"

# Energy Data APIs
ENERGY_DATA_ENABLED="true"
ENERGY_CACHE_TTL="86400"

# Contractor Verification
CONTRACTOR_VERIFICATION_ENABLED="true"
RVO_CERTIFICATION_CHECK="true"

# Subsidy Integration
SUBSIDY_AUTO_CHECK="true"
SUBSIDY_APPLICATION_ENABLED="true"

# NOTE: Energy data and subsidy information obtained through official RVO and government APIs
# Production uses real-time data from RVO, EP Online, and CBS
# The system integrates with official Dutch energy transition databases
# All contractor certifications are verified through RVO systems